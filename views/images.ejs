<!DOCTYPE html>
<html>
<head>
 <title>All</title>
</head>
<body>

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for Course code or Course Name.." title="Type in a name">

<table id="myTable" class="table table-striped">
    	<% files.forEach(function(file,i){ %>
    <tr>
	<th>Course Code:</th>
	<td><%= file.courseCode %></td>
	</tr>
	<tr>
	<th>Course Name:</th>
	<td><%= file.courseName %></td>
	</tr>
	<tr>
	<th>Year:</th>
	<td><%= file.year %></td>
	</tr>
	<tr>
	<th>Semester:</th>
	<td><%= file.semester %></td>
	</tr>
	<tr>
	<th>Department:</th>
	<td><%= file.department %></td>
	</tr>
    <tr>

	<th>Download:</th>
	<td><a href="/download/<%= file._id %>" ><%= file.myimage %></a></td>
	</tr>
	</t></t>

	<!-- <tr>
	<th></th>
	<td><a href="<% file.originalname %>"><%= file.__v %></a></td>
	</tr>
	<tr>
	<th></th>
	<td><a href= "/download/<%= file._id %>">Download</a></td>
	</tr> -->
	<% }) %>
    </table>


   <script>
function myFunction() {
  var input, filter, table, tr, td, j;
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  table = document.getElementById("myTable");
  td = table.getElementsByTagName("td");
  for (j = 0; j < td.length; j++) {
    tr = td[j].getElementsByTagName("tr")[0];
    if (tr) {
      if (tr.innerHTML.toUpperCase().indexOf(filter) > -1) {
        td[j].style.display = "";
      } else {
        td[j].style.display = "none";
      }
    }       
  }
}
</script>
    
</body>
</html>